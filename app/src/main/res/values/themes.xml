<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RockPaperScissors" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal50A100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.RockPaperScissors.TextView</item>

    </style>

    <style name="Theme.RockPaperScissors.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.RockPaperScissors.Button" parent="Widget.MaterialComponents.TextView">
        <item name="cornerRadius">22dp</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="Theme.RockPaperScissors.Bold.Italic" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">23sp</item>
    </style>


</resources>

